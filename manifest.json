{
  "manifest_version": 3,
  "name": "DocFusion PDF",
  "description": "抓取文档站点合并为可打印 PDF。",
  "version": "0.1.0",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_title": "DocuPrint",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/parser.js",
        "scripts/printer.js",
        "scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
